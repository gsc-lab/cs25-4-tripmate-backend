{
    "name": "tripmate/backend",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Tripmate\\Backend\\": "app/"
        }
    },
    "require": {
        "respect/validation": "^2.4",
        "altorouter/altorouter": "^2.0",
        "firebase/php-jwt": "^6.11"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "rector/rector" :  "^1.2",
        "phpstan/phpstan": "^1.12",
        "phpmd/phpmd": "^2.15"
    },
    "scripts": {
        "fix": "php-cs-fixer fix app tests --config=.php-cs-fixer.dist.php --allow-risky=yes",
        "fix:dry": "php-cs-fixer fix app tests --config=.php-cs-fixer.dist.php --allow-risky=yes --dry-run --diff",

        "rector": "rector process app tests --config=rector.php",
        "rector:dry": "rector process app tests --config=rector.php --dry-run",

        "stan": "phpstan analyse app tests --level=max --configuration=phpstan.neon --memory-limit=1G",

        "md": "phpmd app,tests text phpmd.xml",

        "qa": [
        "@fix:dry",
        "@rector:dry",
        "@stan",
        "@md"
        ],
        "refactor": [
        "@rector",
        "@fix"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
